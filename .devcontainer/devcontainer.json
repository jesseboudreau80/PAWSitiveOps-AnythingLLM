// .devcontainer/devcontainer.json
{
  "name": "PAWSitiveOps-AnythingLLM",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18-bullseye",
  "remoteUser": "root",

  // ← Add this entire block:
  "build": {
    "args": {
      "STORAGE_DIR": "/workspaces/PAWSitiveOps-AnythingLLM/server/storage"
    }
  },

  "features": {
    "ghcr.io/dhoeric/features/hadolint:1": { "version": "latest" },
    "ghcr.io/devcontainers/features/terraform:1": {},
    "ghcr.io/devcontainers-contrib/features/apt-packages:1": {
      "packages": [
        /* … all your other packages … */,
        "libssl1.1"
      ]
    }
  },

  "postCreateCommand": "…",
  "updateContentCommand": "…",
  "portsAttributes": { "3001": { "label": "Backend", "onAutoForward": "notify" }, "3000": { "label": "Frontend", "onAutoForward": "openPreview" } },
  "capAdd": ["SYS_ADMIN"],
  "remoteEnv": { "NODE_ENV": "development", "ESLINT_USE_FLAT_CONFIG": "true", "ANYTHING_LLM_RUNTIME": "docker" },
  "shutdownAction": "stopContainer"
}
